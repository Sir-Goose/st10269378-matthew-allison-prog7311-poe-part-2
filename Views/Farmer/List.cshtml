@model IEnumerable<prog7311.Models.Farmer>
@{
    ViewData["Title"] = "Farmers - Agri-Energy Connect";
}

<h2 class="text-center mt-4">All Farmers</h2>
<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var farmer in Model)
                {
                    <tr>
                        <td>@farmer.Name</td>
                        <td>@farmer.Email</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-controller="Product" asp-action="ListByFarmer" asp-route-farmerId="@farmer.Id">View Products</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 